{
  "name": "mastermind",
  "version": "1.0.0",
  "description": "Um assistente pessoal no Telegram para organizar tarefas e movimentação financeira.",
  "main": "dist/bot.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/bot.ts\"",
    "db:reset": "npx prisma migrate reset --force && npx prisma db seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "daviPeter07",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node-dev src/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "@types/node-telegram-bot-api": "^0.64.7",
    "nodemon": "^3.1.4",
    "prisma": "^5.17.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}